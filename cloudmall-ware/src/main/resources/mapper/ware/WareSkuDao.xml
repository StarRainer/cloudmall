<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rainer.cloudmall.ware.dao.WareSkuDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.rainer.cloudmall.ware.entity.WareSkuEntity" id="wareSkuMap">
        <result property="id" column="id"/>
        <result property="skuId" column="sku_id"/>
        <result property="wareId" column="ware_id"/>
        <result property="stock" column="stock"/>
        <result property="skuName" column="sku_name"/>
        <result property="stockLocked" column="stock_locked"/>
    </resultMap>
    <insert id="addStock">
        INSERT INTO wms_ware_sku (sku_id, ware_id, stock, sku_name, stock_locked)
        VALUES
            <foreach collection="wareSkuEntities" item="entity" separator=",">
                (#{entity.skuId}, #{entity.wareId}, #{entity.stock}, #{entity.skuName}, #{entity.stockLocked})
            </foreach>
        ON DUPLICATE KEY UPDATE
            stock = stock + VALUES(stock)
    </insert>
</mapper>